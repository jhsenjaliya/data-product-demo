{
  "$id": "https://example.com/user/preferences.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UserPreferences",
  "type": "object",
  "properties": {
    "language": {
      "type": "string",
      "enum": [
        "en",
        "fr",
        "de",
        "es"
      ]
    },
    "timezone": {
      "type": "string"
    },
    "notification_channels": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "email",
          "sms",
          "push"
        ]
      }
    }
  },
  "required": [
    "language",
    "timezone"
  ]
}
